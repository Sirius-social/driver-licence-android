<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.sirius.driverlicense.ui.profile.MenuProfileViewModel" />
    </data>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/backgroundColor">

        <LinearLayout
            android:id="@+id/topView"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/backgroundColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:id="@+id/logoView"
                android:layout_weight="1" />



        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">
                
           <!--     <com.sirius.design.views.AvatarView
                    android:id="@+id/avatarView"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:onClick="@{viewModel::onAvatarClick}"
                    app:mode="extraLarge" />-->

                <TextView
                    android:id="@+id/nameView"
                    style="@style/Regular19"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    tools:text="KJShdkjsa hdsjkakhdJSHkjdha"/>

                <TextView
                    android:id="@+id/nicknameView"
                    style="@style/Regular15"
                    android:textColor="@color/hintColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    tools:text="KJShdkjsa"/>

                <TextView
                    android:id="@+id/phoneView"
                    style="@style/Regular15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="KJShdkjsa hdsjkakhdJSHkjdha"
                    android:layout_marginBottom="24dp"/>

                <TextView
                    android:id="@+id/lastConnectionsPlaceholder"
                    style="@style/Regular14"
                    android:textColor="@color/hintColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:visibility="gone"
                    android:text="@string/empty_connections_hint"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/lastConnectionsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:itemCount="13"
                    android:nestedScrollingEnabled="false"
                    tools:listitem="@layout/item_connection"/>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</layout>